<%= render 'nav' %>

<div class="container-show">
  <div class="pokemon-show">
    <div class="pokemon-header" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">

      <div class="arrows">
        <% if @pokemon['id'] > 1 %>
          <a href="/pokemons/<%=@pokemon['id']-1%>"><%= image_tag('chevron_left') %></a>
        <% end  %>

        <h1><%= @pokemon['name'] %></h1>
        <p style="color:white; font-style: italic; font-weight: bold; margin:2%; font-size: 24px">#<%= @pokemon['id'] %></p>
        <% if @pokemon['id'] < 151%>
          <a href="/pokemons/<%=@pokemon['id']+1%>"><%= image_tag('chevron_right') %></a>
        <% end %>
      </div>

      <img src="https://raw.githubusercontent.com/pokeapi/sprites/master/sprites/pokemon/other/dream-world/<%=@pokemon['id'] %>.svg" alt="<%= @pokemon['name'] %>", class="pokemon-sprite">
    </div>

    <div class="pokemon-info">

      <div class="pokemon-type" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>; font-weight: bold">
        <%= @pokemon['types'][0]['type']['name'] %>
      </div>

      <div class="pokemon-weight">

        <%= image_tag('weight.svg', style:"margin-left:37%") %><p><%= @pokemon['weight'] %> - lbs</p>
      </div>

      <div class="pokemon-height">
        <%= image_tag('height.svg', style:"margin-left:37%") %><p><%= @pokemon['height'] * 10 %> - cm</p>
      </div>
    </div>

    <div class="pokemon-stats">
      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">HP | <%= @pokemon['stats'][0]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][0]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>
      </div>
      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">ATK | <%= @pokemon['stats'][1]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][1]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>
      </div>
      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">DEF | <%= @pokemon['stats'][2]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][2]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>
      </div>
      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">SATK | <%= @pokemon['stats'][3]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][3]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>

      </div>
      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">SDEF | <%= @pokemon['stats'][4]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][4]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>
      </div>

      <div class="test">
        <p style="color:<%= type_color(@pokemon['types'][0]['type']['name']) %>">SPD | <%= @pokemon['stats'][5]['base_stat'] %></p>
        <progress value="<%= @pokemon['stats'][5]['base_stat'] %>" max="154" style="background-color:<%= type_color(@pokemon['types'][0]['type']['name']) %>"></progress>
      </div>
    </div>
  </div>
</div>
