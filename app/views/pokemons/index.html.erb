<div class="pokemon-container" >
  <div class="pokemon-title">
    <%= image_tag('pokeball.svg') %>
    <h1>Pok√©dex</h1>
  </div>

  <div class="pokemon-list">
    <% @pokemons.each do |pokemon| %>
      <div class="pokemon-wrapper">
        <a href="/pokemons/<%=pokemon[:id]%>"><h3><%= pokemon[:name] %></h3></a>

        <img src="https://raw.githubusercontent.com/pokeapi/sprites/master/sprites/pokemon/other/dream-world/<%=pokemon[:id] %>.svg" alt="<%= pokemon[:name] %>", class="pokemon-sprite">
        <%# <p>ID: <%= pokemon[:id]</p> %>
      </div>
    <% end %>
  </div>
</div>
